<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fill_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pomortsew.birthofamystery.FillForm">

    <EditText
        android:id="@+id/editText_fill_form_patronymic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView_fill_form_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_input_name"
        android:textSize="18sp"
        android:layout_below="@+id/textView_fillForm_fill_the_form"
        android:layout_alignRight="@+id/button_fill_form_other_calculation"
        android:layout_alignEnd="@+id/button_fill_form_other_calculation"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <TextView
        android:id="@+id/textView_fillForm_fill_the_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/txt_fill_the_form"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView_fill_form_patronymic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_input_patronymic"
        android:textSize="18sp"
        android:layout_above="@+id/editText_fill_form_patronymic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editText_fill_form_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView_fill_form_surname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_fill_form_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_input_surname"
        android:textSize="18sp"
        android:layout_below="@+id/textView_fillForm_fill_the_form"
        android:layout_toRightOf="@+id/button_fill_form_instal_date"
        android:layout_toEndOf="@+id/button_fill_form_instal_date" />

    <EditText
        android:id="@+id/editText_fill_form_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView_fill_form_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/txt_calculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_fill_form_calculation"
        tools:ignore="HardcodedText,RelativeOverlap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button_fill_form_instal_date"
        android:layout_toRightOf="@+id/button_fill_form_instal_date" />

    <Button
        android:text="@string/txt_other_calculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button_fill_form_other_calculation"
        android:layout_toLeftOf="@+id/editText_fill_form_patronymic"
        android:layout_toStartOf="@+id/editText_fill_form_patronymic" />

    <Button
        android:id="@+id/button_fill_form_instal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_instal_data"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button_fill_form_other_calculation"
        android:layout_alignLeft="@+id/editText_fill_form_patronymic"
        android:layout_alignStart="@+id/editText_fill_form_patronymic" />

    <TextView
        android:id="@+id/textView_fill_form_date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_fill_form_patronymic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
